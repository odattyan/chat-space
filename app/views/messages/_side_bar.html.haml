.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name 
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new-group
        = link_to "#", class: "new-group" do
          = icon('far', 'edit')
        %li.top-items__icons__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .side-bar__group-list
    .list
      %p.list__group-name go
      %p.list__group-message ようこそ