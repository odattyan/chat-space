  .chat-main__message-form
    %form.form
      .input-box
        %input.input-box__text{name: "message[content]", placeholder: "type a message", type: "text", id: "message_content"}
        %label.input-box__img
          =icon('fas', 'image')
          %input.input-box__img__file{type: "file", name: "message[img]", id: "message_image"}
      %input.submit-btn{type: "submit", name: "commit", value: "Send"}